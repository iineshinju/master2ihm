<Page
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd" >
    <!--xmlns:gsb="nativescript-plugin-google-signin-button" --> 
    <ActionBar></ActionBar>

    <StackLayout class="page__content"  >
        <Label  text="Inscription" style="margin-bottom: 30; font-size: 50; text-align: left ;font-weight: bold"/>
       <!-- <gsb:GsbButton id="gsbButton" horizontalAlignment="left" tap="gsbTap"/> -->
       <Button text="Google" tap="toGoogle" class="inscriptionButton" style ="display:inline-block"  ></Button> 
       <Button text="Facebook" tap="toFacebook" class="inscriptionButton" style ="display:inline-block" ></Button>
       <label text="ou inscrivez-vous avec votre email" textAlignment="center" />
       <TextField  hint="Nom d'utilisateur" color="darkblue" marginBottom="10" />
       <TextField  hint="Numéro de téléphone" color="darkblue" marginBottom="10" keyboardType="phone"  />
       <TextField  hint="Mail" color="darkblue" marginBottom="10" keyboardType="email" />
       <TextField  hint="Mot de passe" color="darkblue" marginBottom="10"  secure="true" />
       <TextField  hint="Confirmation du mot de passe" color="darkblue" marginBottom="10" secure="true" />
       <Button text="Inscription" tap="toProfil"  ></Button> 
       <Label  text="Vous avez déjà un compte?" />
       <Button text="Connectez-vous" tap="toLogin" ></Button>
    </StackLayout>
</Page>
