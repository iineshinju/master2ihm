<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <NavigationButton tap="onBackButtonTap" android.systemIcon="ic_menu_back" />
        <Label class="person-name2" text="{{ name }}" />
    </ActionBar>

	<ScrollView>
    <StackLayout>
		<Image src="{{ photo }}" weight="90%"></Image>
		<Label class="person-passion" text="{{ passion }}" verticalAlignement="top" textWrap="true"/>
		<Label class="person-description" text="{{ description }}" verticalAlignement="top" textWrap="true"/>
    </StackLayout>
	</ScrollView>
</Page>
