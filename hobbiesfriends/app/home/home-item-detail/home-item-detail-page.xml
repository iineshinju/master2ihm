<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <NavigationButton tap="onBackButtonTap" android.systemIcon="ic_menu_back" />
        <Label text="{{ name }}" />
    </ActionBar>

	<ScrollView>
    <GridLayout rows="2*, *, *">
		<Image src="{{ photo }}" row="0"></Image>
		<Label class="m-10 h3" text="{{ passion }}" verticalAlignement="top" row="1" textWrap="true"/>
        <Label class="m-10 h3" text="{{ description }}" verticalAlignement="top" row="2" textWrap="true"/>
    </GridLayout>
	</ScrollView>
</Page>
