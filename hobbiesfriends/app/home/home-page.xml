<Page
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd"  actionBarHidden="true">

	<ListView items="{{ persons }}" itemTap="onItemTap">
		<ListView.itemTemplate>
			<StackLayout backgroundColor="azure">
				<Label text="{{ name }}"  textWrap="true"  color="red" />
				<Image src="{{ photo }}"></Image>
				<Label text="{{ passion }}"  textWrap="true" color="blue"/>
				<Label text="{{ end }}"  textWrap="true" color="red" textAlignment="center"/>
			</StackLayout>
		</ListView.itemTemplate>
	</ListView>
</Page>
