<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true">

    <StackLayout  backgroundColor="azure">
        <Label class="title-top" text="Messages" />
        <ListView items="{{ persons }}" itemTap="onItemTap">
            <ListView.itemTemplate>
                <StackLayout orientation="horizontal">
                    <Image class="image-message1" src="{{ photo }}" />
					<Label class="title-medium" text="{{ name }}" textWrap="true"/>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
