<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <Label text="Message" />
    </ActionBar>

    <StackLayout class="page__content"  >
        <label text="Nouveau Matchs" style="margin-bottom: 30; color: red;  text-align: left ;font-weight: bold; ; font-size: 30" />
        <ListView items="{{ persons }}" itemTap="onItemTap">
            <ListView.itemTemplate>
                <StackLayout backgroundColor="azure">
                    <Image src="{{ photo }}" style="width:100px; border-radius: 100%;"></Image>
                    <Label class="person-name" text="{{ name }}"  textWrap="true"/>
                    <Label text="{{ end }}"  textWrap="true" color="red" textAlignment="center"/>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
        <label text="Messages" style="margin-bottom: 30; color: red;  text-align: left ;font-weight: bold; ; font-size: 30" />
        <ListView items="{{ persons }}" itemTap="onItemTap">
            <ListView.itemTemplate>
                <StackLayout backgroundColor="azure">
                    <Label class="person-name" text="{{ name }}"  textWrap="true"/>
                    <Image src="{{ photo }}" style="width:100px; border-radius: 100%;"></Image>
                    <Label class="person-message" text="{{ message}}"  textWrap="true"/>
                    <Label text="{{ end }}"  textWrap="true" color="red" textAlignment="center"/>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
