<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <NavigationButton tap="onBackButtonTap" android.systemIcon="ic_menu_back" />
        <Label text="{{ name }}" />
    </ActionBar>
      <StackLayout backgroundColor="azure">
        <Image src="{{ photo }}" style="width:400px; border-radius: 100%; "></Image>
        <Label class="person-name" text="{{ name }}"  textWrap="true" textAlignment="center"/>
        <Label class="person-message" text="{{ message}}"  textWrap="true" textAlignment="left"/>
        <Button text="Bloquer" tap="Bloquer" row="0" col="1"/>
      </StackLayout>
</Page>
