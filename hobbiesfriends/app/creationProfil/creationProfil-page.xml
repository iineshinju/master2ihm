<Page
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">
    <!-- xmlns:dd="nativescript-drop-down"> -->

	<ScrollView>
    <StackLayout class="page__content"  >
        <Label  text="Créez votre profil" style="margin-bottom: 30; font-size: 50; text-align: left ;font-weight: bold"/>
        <Button text="Ajoutez une photo de profil" ></Button>
        <Button text="Localisation" tap ="toLocalisation" class="localisationButton" style ="display:inline-block"  ></Button> 
       <label text="A propos" style="margin-bottom: 30; color: red;  text-align: left ;font-weight: bold; ; font-size: 30" />
       <label text="Nom - Prénom"  />
       <TextField  hint="Insérez votre nom et prénom" color="darkblue" marginBottom="10" />
       <label text="Email"  />
       <TextField  hint="Insérez votre email" color="darkblue" marginBottom="10" />
       <label text="Date de naissance"  />
       <!--<DatePicker year=" 1990" month="01" day="01"> </DatePicker>  -->
      <!--<DatePicker year="{{ currentYear }}" month="{{ currentMonth }}"
                day="{{ currentDay}}" minDate="1970-01-01"
                maxDate="2100-12-31" /> -->
       <label text="Genre"  />
      <ListPicker items="{{ genre }}" selectedIndex="{{ selectedListPickerIndex }}"/>
       <label text="Vos passions"  />
       <Button text="Ajouter des passions" horizontalAlignment="left"  tap="toAjoutPassions" > </Button>
       <label text="Notifications"  />
       <Button text="Ajouter des notifications" horizontalAlignment="left"  tap="toNotifications" > </Button>
       <Button text="Enregistrer"  tap="toProfil" ></Button> 
    </StackLayout>
	</ScrollView>
</Page>
